{
  "name": "vernonia-addresses",
  "version": "1.0.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "postinstall": "node ./scripts/sass-replace.js && node ./scripts/copy-assets.js",
    "prettier": "prettier --write \"src/**/*.ts?(x)\" && prettier --write \"src/**/*.js\"",
    "serve": "vite preview",
    "test": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfVernonia/vernonia-addresses.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CityOfVernonia/vernonia-addresses/issues"
  },
  "homepage": "https://github.com/CityOfVernonia/vernonia-addresses#readme",
  "devDependencies": {
    "@types/luxon": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "ansi-regex": ">=6.0.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^10.1.0",
    "prettier": "^2.7.1",
    "replace-in-file": "^6.3.5",
    "sass": "^1.54.8",
    "tslib": "^2.4.0",
    "typescript": "^4.8.2",
    "vite": "^3.0.9"
  },
  "dependencies": {
    "@arcgis/core": "^4.24.7",
    "@esri/calcite-components": "1.0.0-beta.93",
    "@vernonia/core": "^2.1.3",
    "luxon": "^3.0.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "package-lock.json",
      "node_modules/**",
      "scripts/**",
      "src/public/**",
      "src/core/**",
      "vite.config.js"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2
  }
}
